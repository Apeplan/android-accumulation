<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.hanzx.statelayout.state.ColorProgressBar
            android:id="@+id/state_view_loading"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/state_view_message_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:src="@drawable/state_crazy_error"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/state_view_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:textColor="#333333"
            android:textSize="16sp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/state_view_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="51dp"
            android:layout_marginRight="51dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_retry_btn"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:visibility="gone"/>
    </LinearLayout>

</merge>